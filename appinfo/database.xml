<?xml version="1.0" encoding="UTF-8" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*contactstofb_log</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                    <autoincrement>1</autoincrement>
                <length>4</length>
            </field>
            <field>
                <name>type</name>
                <type>text</type>
                <length>16</length>
                <notnull>true</notnull>
            </field>
            <field>
                <name>date</name>
                <type>timestamp</type>
                <notnull>true</notnull>
                <default>0000-00-00 00:00:00</default>
            </field>
            <field>
                <name>synceditems</name>
                <type>integer</type>
                <unsigned>1</unsigned>
                <notnull>true</notnull>
            </field>
            <field>
                <name>status</name>
                <type>text</type>
                <length>255</length>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
</database>